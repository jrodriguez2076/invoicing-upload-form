apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: seller-signup-form
spec:
  replicas: <%= replicas %>
  template:
    metadata:
      labels:
        k8s.linio.com/app: seller-signup-form
        k8s.linio.com/service: seller-signup-form
    spec:
      nodeSelector:
        k8s.linio.com/group: web
      containers:
        - name: php
          image: 137361304112.dkr.ecr.us-east-1.amazonaws.com/seller-signup-form-php:<%= current_sha %>
          envFrom:
            - <%= ENV['ENVIRONMENT'] == 'production' ? 'secret' : 'configMap' %>Ref:
                name: parameters
        - name: nginx
          image: 137361304112.dkr.ecr.us-east-1.amazonaws.com/seller-signup-form-nginx:<%= current_sha %>
          ports:
            - containerPort: 80
          env:
            - name: NGINX_HOST
              value: seller-signup-form.<%= domain %>
            - name: PHP_FPM_HOST
              value: localhost
          envFrom:
            - <%= ENV['ENVIRONMENT'] == 'production' ? 'secret' : 'configMap' %>Ref:
                name: parameters

---

apiVersion: v1
kind: Service
metadata:
  name: seller-signup-form
  labels:
    k8s.linio.com/app: seller-signup-form
spec:
  type: NodePort
  ports:
    - name: http
      port: 80
  selector:
    k8s.linio.com/app: seller-signup-form
    k8s.linio.com/service: seller-signup-form

---

apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: seller-signup-form
  annotations:
    kubernetes.io/ingress.class: alb
    alb.ingress.kubernetes.io/target-type: instance
    alb.ingress.kubernetes.io/scheme: internal
    alb.ingress.kubernetes.io/certificate-arn: <%= elb_certificate_arn %>
    alb.ingress.kubernetes.io/tags: Application=seller-signup-form,Environment=<%= ENV["ENVIRONMENT"] %>,CostCenter=regional,CostDepartment=it
    alb.ingress.kubernetes.io/listen-ports: '[{"HTTP":80,"HTTPS": 443}]'
    alb.ingress.kubernetes.io/security-groups: http, https
    alb.ingress.kubernetes.io/actions.redirect: '{"Type": "redirect", "RedirectConfig": {"Protocol": "HTTPS", "Port": "443", "StatusCode": "HTTP_301"}}'
    alb.ingress.kubernetes.io/healthcheck-path: '/_healthcheck'
spec:
  rules:
    - host: seller-signup-form.<%= domain %>
      http:
        paths:
          - path: /*
            backend:
              serviceName: redirect
              servicePort: use-annotation
          - path: /*
            backend:
              serviceName: seller-signup-form
              servicePort: 80
