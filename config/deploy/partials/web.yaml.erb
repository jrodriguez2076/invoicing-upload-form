apiVersion: apps/v1
kind: Deployment
metadata:
  name: psc-form
spec:
  replicas: <%= replicas %>
  selector:
    matchLabels:
      app.kubernetes.io/name: psc-form
      app.kubernetes.io/managed-by: kubernetes-deploy
      app.kubernetes.io/component: webserver
  template:
    metadata:
      labels:
        app.kubernetes.io/name: psc-form
        app.kubernetes.io/managed-by: kubernetes-deploy
        app.kubernetes.io/component: webserver
    spec:
      nodeSelector:
        k8s.linio.com/group: web
      containers:
        - name: php
          image: 137361304112.dkr.ecr.us-east-1.amazonaws.com/psc-form-php:<%= current_sha %>
          envFrom:
            - <%= ENV['ENVIRONMENT'] == 'production' ? 'secret' : 'configMap' %>Ref:
                name: parameters
        - name: nginx
          image: 137361304112.dkr.ecr.us-east-1.amazonaws.com/psc-form-nginx:<%= current_sha %>
          ports:
            - containerPort: 80
          env:
            - name: NGINX_HOST
              value: psc-form.<%= domain %>
            - name: PHP_FPM_HOST
              value: localhost
          envFrom:
            - <%= ENV['ENVIRONMENT'] == 'production' ? 'secret' : 'configMap' %>Ref:
                name: parameters

---

apiVersion: v1
kind: Service
metadata:
  name: psc-form
  labels:
    app.kubernetes.io/name: psc-form
    app.kubernetes.io/managed-by: kubernetes-deploy
spec:
  type: NodePort
  ports:
    - name: http
      port: 80
  selector:
    app.kubernetes.io/name: psc-form
    app.kubernetes.io/component: webserver

---

apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: psc-form
  annotations:
    kubernetes.io/ingress.class: alb
    alb.ingress.kubernetes.io/target-type: instance
    alb.ingress.kubernetes.io/scheme: internet-facing
    alb.ingress.kubernetes.io/certificate-arn: <%= elb_certificate %>
    alb.ingress.kubernetes.io/tags: Application=psc-form,Environment=<%= ENV["ENVIRONMENT"] %>,CostCenter=regional,CostDepartment=it
    alb.ingress.kubernetes.io/listen-ports: '[{"HTTP":80,"HTTPS": 443}]'
    alb.ingress.kubernetes.io/security-groups: http, https
    alb.ingress.kubernetes.io/actions.redirect: '{"Type": "redirect", "RedirectConfig": {"Protocol": "HTTPS", "Port": "443", "StatusCode": "HTTP_301"}}'
    alb.ingress.kubernetes.io/healthcheck-path: '/_healthcheck'
spec:
  rules:
    - host: psc-form.<%= domain %>
      http:
        paths:
          - path: /*
            backend:
              serviceName: redirect
              servicePort: use-annotation
          - path: /*
            backend:
              serviceName: psc-form
              servicePort: 80
