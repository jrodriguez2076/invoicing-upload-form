version: '3.7'
services:
  php:
    volumes:
      - .:/application
    environment:
      LINIO_ENV: local
      XDEBUG_CONFIG: remote_host=host.docker.internal

  nginx:
    ports:
      - '8014:80'
    environment:
      VIRTUAL_HOST: seller-signup-form.localhost
      NGINX_HOST: seller-signup-form.localhost
      PHP_FPM_HOST: php
    volumes:
      - .:/application
