{
  "scripts": {
    "lint": "prettier --write \"./**/*.{js,ts,json,css,scss,md,yml,yaml}\"",
    "lint:check": "prettier --list-different \"./**/*.{js,ts,json,css,scss,md,yml,yaml}\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./**/*.{js,ts,json,css,scss,md,yml,yaml}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "husky": "^1.0.0-rc.14",
    "lint-staged": "^7.2.2",
    "prettier": "^1.14.3"
  }
}
