{% extends 'base.html.twig' %}

{% block content %}
  <div class="logo-container">
    <img class="logo-image" src="{{ asset('images/LinioWhiteLogo.png') }}">
  </div>
  <div class="container">
    <div class="accordion" id="accordionForm">
      {% if hunter is not empty %}
        <div class="account-hunter">{{ 'account_hunter'|trans ~ hunter }}</div>
      {% endif %}
      <h2>{{ 'form_title' | trans }}</h2><br>
      {{ form_start(form, {'attr': {'id': 'seller_sign_up_form'}}) }}
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">
            {{ 'section_1_title' | trans }}
          </h5>
        </div>
        <div id="collapseOne">
          <div class="card-body row">
            <div class="col-12">
              <h6>{{ 'subsection_1_title' | trans }}</h6>
            </div>
            <br>
            <br>
            {{ form_row(form.account.legalName) }}
            {{ form_row(form.account.fiscalIdNumber) }}
            {{ form_row(form.account.legalRepresentative) }}
            {{ form_row(form.account.accountName) }}
            <div class="col-12">
              <h6>{{ 'subsection_2_title' | trans }}</h6>
            </div>
            {{ form_row(form.contact.firstName) }}
            {{ form_row(form.contact.lastName) }}
            {{ form_row(form.contact.email) }}
            {{ form_row(form.contact.phoneNumber) }}
            {{ form_row(form.account.secondaryPhone) }}
            {{ form_row(form.account.socialNetworks) }}
            <div class="col-12">
              <h6>{{ 'subsection_3_title' | trans }}</h6>
              {{ 'Main brands'| trans }}
            </div>
            {{ form_row(form.opportunity.brand1) }}
            {{ form_row(form.opportunity.brand2) }}
            {{ form_row(form.opportunity.brand3) }}
            {{ form_row(form.opportunity.brand4) }}
            {{ form_row(form.opportunity.brand5) }}
            {{ form_row(form.opportunity.potentialCatalog) }}
            {{ form_row(form.opportunity.website) }}
            {{ form_row(form.opportunity.otherStoresList) }}
            {{ form_row(form.opportunity.otherStoresAddress) }}
            {{ form_row(form.opportunity.otherStoreName) }}
            {{ form_row(form.opportunity.otherStoresRating) }}
            {{ form_row(form.opportunity.mainCategory) }}
            {{ form_row(form.opportunity.secondaryCategory) }}
            {{ form_row(form.opportunity.marketingInvest) }}
            {{ form_row(form.opportunity.integrationFlag) }}
            {{ form_row(form.opportunity.earningsEstimate) }}
          </div>
        </div>
      </div>
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">
            {{ 'section_2_title' | trans }}
          </h5>
        </div>
        <div id="collapseTwo">
          <div class="card-body row">
            <div class="col-12">
              <h6>{{ 'subsection_4_title' | trans }}</h6>
            </div>
            {{ form_row(form.opportunity.opportunityCountries) }}
            <div class="col-12">
              <h6>{{ 'subsection_5_title' | trans }}</h6>
            </div>
            {{ form_row(form.account.warehouseAddress) }}
            {{ form_row(form.account.warehouseCity) }}
            {{ form_row(form.account.warehouseAddress2) }}
            {{ form_row(form.account.warehousePostalCode) }}
            {{ form_row(form.account.warehouseCountry) }}
            {{ form_row(form.account.warehousePhone) }}
            <div class="col-12">
              <h6>{{ 'subsection_6_title' | trans }}</h6>
            </div>
            {{ form_row(form.opportunity.processingTime) }}
            <div class="col-12">
              <h6>{{ 'subsection_7_title' | trans }}</h6>
            </div>
            {{ form_row(form.opportunity.surveyComment) }}
          </div>
        </div>
      </div>
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">
            {{ 'section_3_title' | trans }}
          </h5>
        </div>
        <div id="collapseThree" class="card">
          <div class="card-body row">
            <div class="col-12">
              <h6>{{ 'subsection_8_title' | trans }}</h6>
            </div>
            {{ form_row(form.account.bankName) }}
            {{ form_row(form.account.bankAcctHolder) }}
            {{ form_row(form.account.bankAcctNumber) }}
            <div class="col-12">
              <h6>{{ 'subsection_9_title' | trans }}</h6>
            </div>
            {{ form_row(form.account.legalAddress) }}
            {{ form_row(form.account.legalCity) }}
            {{ form_row(form.account.legalAddress2) }}
            {{ form_row(form.account.legalPostalCode) }}
            {{ form_row(form.account.legalCountry) }}
            <div class="col-12">
              <h6>{{ 'subsection_10_title' | trans }}</h6>
            </div>
            <div class="col-12">
              {{ form_row(form.opportunity.operativeCheckLegallyConstituted) }}
              {{ form_row(form.opportunity.operativeCheckCatalog) }}
              {{ form_row(form.contact.acceptTermsAndConditions) }}
              {{ form_row(form.contact.acceptCommissionsAndPaymentPolicy) }}
              <a href="http://comunicacion.linio.com/MX/Comunicados/IMP/20180305_IMP_PaymentFeesPolicy_VF.pdf"
                 target="_blank">{{ 'see_commissions_and_payment_policy'|trans }}
              </a>
              <a class="col-md-6" href="http://www.liniomexico.com.mx/seller-center/TYC/is_restrictedproducts.pdf"
                 target="_blank">{{ 'restricted_products'|trans }}
              </a>
              <a href="http://comunicacion.linio.com/MX/Comunicados/IMP/20180305_IMP_T%26Cs_VF.pdf"
                 target="_blank">{{ 'see_terms_and_conditions'|trans }}
              </a>

            </div>
          </div>
        </div>
      </div>
      <br>
      <div class="col-md-12 text-right">
        <input type="submit" class="btn btn-primary btn-block col-md-4 offset-md-4" value={{ 'submit'|trans }}/>
      </div>
      {{ form_end(form) }}
    </div>
  </div>
{% endblock %}
