{% extends 'base.html.twig' %}

{% block content %}
  <div class="logo-container">
    <img class="logo-image" src="{{ asset('images/LinioWhiteLogo.png') }}">
  </div>
  <div class="container">
    <div class="accordion" id="accordionForm">
      {% if hunter is not empty %}
        <div class="account-hunter">{{ 'account_hunter'|trans ~ hunter }}</div>
      {% endif %}
      <h1>{{ 'form_title'|trans }}</h1><br>
      {{ form_start(form) }}
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">
            {{ 'section_1_title' | trans }}
          </h5>
        </div>
        <div id="collapseOne">
          <div class="card-body row">
            {{ form_row(form.account.legalName) }}
            {{ form_row(form.contact.firstName) }}
            {{ form_row(form.contact.lastName) }}
            {{ form_row(form.contact.phoneNumber) }}
            {{ form_row(form.account.secondaryPhone) }}
            {{ form_row(form.account.accountName) }}
            {{ form_row(form.contact.email) }}
            {{ form_row(form.opportunity.opportunityCountries) }}
          </div>
        </div>
      </div>
      <br>
      <div class="col-md-12 text-right">
        <input type="submit" class="btn btn-primary btn-block col-md-4 offset-md-4" value="{{ 'submit'|trans }}"/>
      </div>
      {{ form_end(form) }}
    </div>
  </div>
{% endblock %}
